<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             
             xmlns:wc="using:InformationSecurity.Widgets.Cryptography"
             
             x:Class="InformationSecurity.Widgets.Cryptography.CryptographyWidget"
             x:DataType="wc:CryptographyWidgetModel"
             x:CompileBindings="True">
	
	<UserControl.Styles>
		<Style Selector="TextBlock.Header">
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>				
		
		<Style Selector="TextBlock.Label">
			<Setter Property="FontSize" Value="18"/>
		</Style>
	</UserControl.Styles>
	
	
	<StackPanel 
		Orientation="Vertical" 
	    VerticalAlignment="Stretch">
		
		<TextBlock 
			Margin="5 20" 
			Classes="Header" 
		    TextAlignment="Center"
		    Text="{ Binding HeaderText }"/>
		
		<TextBox 
			Margin="10 0" 
		    Name="MessageInput" 
		    Watermark="{ Binding InputWatermark }"
		    Width="500"
			Height="300" 
		    AcceptsReturn="True"
			Text="{ Binding UserInput}"/>
		
		<StackPanel 
			Orientation="Horizontal" 
		    Margin="20"
		    HorizontalAlignment="Center">
			
			<Button 
				Margin="5 0" 
				Command="{Binding EncryptCommand}"
			    Content="Закодировать"/>
			
			<Button 
				Margin="5 0" 
				Command="{Binding DecryptCommand}"
			    Content="Декодировать"/>
			
		</StackPanel>
	</StackPanel>
</UserControl>
